model Users {
  id Int @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  posts    Json @default("[]")
  totalPosts Int      @default(0)
  likes    Json @default("[]")
  totalLikes Int      @default(0)
  role     Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isblocked Boolean  @default(false)
}

enum Role {
  USER
  ADMIN
}